FROM registry.redhat.io/ubi9/httpd-24

# Build
# docker build -t fillswim/mysite_ubi_s2i_apache:latest -f DockerfileS2IApache .
# podman build -t fillswim/mysite_ubi_s2i_apache:latest -f DockerfileS2IApache .

# Run
# docker run -it -p 8080:8080 fillswim/mysite_ubi_s2i_apache:latest
# podman run -it -p 8080:8080 fillswim/mysite_ubi_s2i_apache:latest

# podman run -d fillswim/mysite_ubi_s2i_apache:latest

# Check
# http://192.168.2.57:8080/
# http://192.168.2.55:8080/
# https://localhost:8080/


# Add application sources to a directory where the assemble script expects them
# and set permissions so that the container runs without the root access
# USER 0
ADD index.html /tmp/src/index.html
# RUN chown -R 1001:0 /tmp/src
# USER 1001

# Let the assemble script install the dependencies
RUN /usr/libexec/s2i/assemble

# The run script uses standard ways to run the application
CMD /usr/libexec/s2i/run